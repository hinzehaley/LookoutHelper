<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/transparent_gray_dark"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_exit_tutorial"
        android:layout_gravity="right"
        android:gravity="right"
        android:text="x"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:background="@color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

    <TextView
        android:text="@string/tutorial_map_markers_color_coded"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/tutorial_map_tap_line"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/tutorial_map_tap_marker"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/tutorial_map_location_info_for_marker"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/tutorial_map_save_report"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>